    <!-- edit account function -->
    <script>
        function editAccount() {

            const userId = document.getElementById('id').value
            const userName = document.getElementById('name').value
            const userNumber = document.getElementById('number').value

            // console.log(userId,userName,userNumber)

            const newAccountDetails = {

                userId: userId,
                userName: userName,
                userNumber: userNumber
            }

            // console.log(newAccountDetails)

            fetch('/editAccount', {
                method: "post",
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(newAccountDetails)
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {

                        Swal.fire({
                            title: "<span style='color: #3BB77E;'>Success!</span>",
                            html: "<span style='color: black;'>user profile edited.</span>",
                            icon: "success",
                            confirmButtonColor: "#3BB77E",
                            confirmButtonText: "OK"
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.reload()
                            }
                        })
                    }
                })
        }
    </script>

    <!-- change password function -->

    <script>
        function changePassword() {

            const userId = document.getElementById('passwordChangeId').value.trim()
            const oldPassword = document.getElementById('oldpassword').value
            const newPassword = document.getElementById('newpassword').value
            // console.log(oldPassword)
            // console.log(newPassword)
            // console.log(userId)

            const passwordDetails = {

                userId: userId,
                oldPassword: oldPassword,
                newPassword: newPassword
            }
            console.log(passwordDetails)
            fetch('/changePassword', {
                method: "post",
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(passwordDetails)
            })
                .then(response => response.json())
                .then(data => {
                    if(data.success){
                        Swal.fire({
                    title: "<span style='color: #3BB77E;'>Success!</span>",
                    html: "<span style='color: black;'>Password changed successfully.</span>",
                    icon: "success",
                    confirmButtonColor: "#3BB77E",
                    confirmButtonText: "OK"
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.reload();
                    }
                });
                    }else {
                Swal.fire({
                    title: 'Error!',
                    text: data.message,
                    icon: 'error',
                    confirmButtonColor: '#d33',
                    confirmButtonText: 'OK'
                });
            }
                })
        }


    </script>

