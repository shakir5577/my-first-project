            <!-- cancel single order -->
            <script>
                function cancelOrder(event, orderId, productId) {
                    event.preventDefault();

                    Swal.fire({
                        icon: "question",
                        title: "Are you sure?",
                        html: `
                <p style="margin-bottom: 10px;">Cancel your order! Select your reason:</p>
                <div style="text-align: left; margin-left: 30px;">
                    <label style="display: block; margin-bottom: 5px;">
                        <input type="radio" id="reason1" name="cancelReason" value="Changed my mind" 
                        style="width: 15px; height: 15px; vertical-align: middle; margin-right: 10px;">
                        Changed my mind
                    </label>
                    <label style="display: block; margin-bottom: 5px;">
                        <input type="radio" id="reason2" name="cancelReason" value="Found a better price" 
                        style="width: 15px; height: 15px; vertical-align: middle; margin-right: 10px;">
                        Found a better price
                    </label>
                    <label style="display: block; margin-bottom: 5px;">
                        <input type="radio" id="reason3" name="cancelReason" value="Order delayed" 
                        style="width: 15px; height: 15px; vertical-align: middle; margin-right: 10px;">
                        Order delayed
                    </label>
                    <label style="display: block; margin-bottom: 5px;">
                        <input type="radio" id="reason4" name="cancelReason" value="Other" 
                        style="width: 15px; height: 15px; vertical-align: middle; margin-right: 10px;">
                        Other
                    </label>
                    <input type="text" id="otherCancelReason" placeholder="If 'Other', please specify here" 
                    style="display:none; margin-top:10px; width: 100%;" />
                </div>
            `,
                        showCancelButton: true,
                        confirmButtonColor: '#0056b3',
                        confirmButtonText: "Submit",
                        willOpen: () => {
                            const otherReasonInput = document.getElementById('otherCancelReason');
                            document.querySelectorAll('input[name="cancelReason"]').forEach((radio) => {
                                radio.addEventListener('change', (event) => {
                                    if (event.target.value === 'Other') {
                                        otherReasonInput.style.display = 'block';
                                    } else {
                                        otherReasonInput.style.display = 'none';
                                    }
                                });
                            });
                        },
                        preConfirm: async () => {
                            const selectedReason = document.querySelector('input[name="cancelReason"]:checked');
                            let reason = selectedReason ? selectedReason.value : '';

                            if (reason === 'Other') {
                                reason = document.getElementById('otherCancelReason').value.trim();
                            }

                            if (!selectedReason || (reason === 'Other' && !reason)) {
                                Swal.showValidationMessage('Please select a reason for the cancellation');
                                return null;
                            }

                            if (reason.length < 5) {
                                Swal.showValidationMessage('The reason must be at least 5 characters long');
                                return null;
                            }

                            try {
                                const res = await fetch('/cancelSingleProduct', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json'
                                    },
                                    body: JSON.stringify({
                                        orderId: orderId,
                                        productId: productId,
                                        reason: reason
                                    })
                                });

                                const data = await res.json();

                                if (data.success == 2) {
                                    Swal.fire({
                                        icon: "success",
                                        title: "Order Cancelled",
                                        confirmButtonColor: '#0056b3',
                                        confirmButtonText: "Ok",
                                    }).then((result) => {
                                        if (result.isConfirmed) {
                                            window.location.href = '/orders';
                                        }
                                    });
                                } else if (data.success == 1) {
                                    Swal.fire({
                                        icon: "success",
                                        title: "Order Cancelled",
                                        text: "Your money has been added to your wallet.",
                                        confirmButtonColor: '#0056b3',
                                        confirmButtonText: "Ok",
                                    }).then((result) => {
                                        if (result.isConfirmed) {
                                            window.location.href = '/wallet';
                                        }
                                    });
                                }
                            } catch (err) {
                                console.error(err);
                            }

                            return reason;
                        }
                    });
                }
            </script>


