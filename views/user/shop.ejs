	<script>

		function addToCartFromShop(event, productId) {
			event?.preventDefault()



			// const quantity = document.getElementById('quantity').value
			// console.log(quantity)

			const productData = {
				productId: productId,
				// quantity: quantity
			}
			console.log(productData)


			fetch('/addToCartSinglePro', {

				method: 'post',
				headers: {
					'Content-Type': 'application/json'
				},
				body: JSON.stringify(productData)

			})
				.then(response => response.json())
				.then(data => {
					console.log(data)
					if (data.success) {
						if (data.alReadyInCart) {
							Swal.fire({
								icon: 'info',
								title: 'Product Already Added',
								text: 'This product is already in your cart!',
								confirmButtonText: 'OK'
							});
						} else {

							document.getElementById('cartProductImage').src = data.product.image
							document.getElementById('cartProductName').textContent = data.product.name

							$('#cartSuccessModal').modal('show')
						}


					} else {
						Swal.fire({
							icon: 'error',
							title: 'Failed',
							text: 'Failed to add product to cart',
							confirmButtonText: 'OK'
						});
					}
				})
				.catch(error => {
					console.error('Error:', error)
					Swal.fire({
						icon: 'error',
						title: 'Error',
						text: 'Error adding product to cart',
						confirmButtonText: 'OK'
					});
				})
		}
	</script>

