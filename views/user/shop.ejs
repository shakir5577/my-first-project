	<script>
		function addToWishlist(event, productId) {

			const productData = {
				productId: productId
			}
			console.log(productData)


			fetch('/addToWishlist', {

				method: 'post',
				headers: {
					'Content-Type': 'application/json'
				},
				body: JSON.stringify(productData)

			}).then(response => response.json())
				.then(data => {
					console.log(data)
					if (data.success) {
						if (data.alReadyInWishlist) {
							Swal.fire({
								icon: 'info',
								title: 'Product Already Added',
								text: 'This product is already in your wishlist!',
								confirmButtonText: 'OK'
							});
						} else {

							document.getElementById('wishlistProductImage').src = data.product.image;
							document.getElementById('wishlistProductName').textContent = data.product.name;

							$('#wishlistSuccessModal').modal('show');
						}


					} else {
						Swal.fire({
							icon: 'error',
							title: 'Failed',
							text: 'Failed to add product to wishlist',
							confirmButtonText: 'OK'
						});
					}
				})
				.catch(error => {
					console.error('Error:', error)
					Swal.fire({
						icon: 'error',
						title: 'Error',
						text: 'Error adding product to wishlist',
						confirmButtonText: 'OK'
					});
				})
		}
	</script>

