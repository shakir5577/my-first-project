			const message = document.getElementById('out-of-stock-message');
			message.style.display = 'inline'; // Show the out-of-stock message
		}

	</script>

	<script>
		function displayProducts(products) {
			let list = document.getElementById('shop-list');
			list.innerHTML = '';

			products.forEach(product => {
				list.innerHTML += `
            <div class="col-lg-3 mb-4 text-center">
                <div class="product-entry border">
                    <a href="/showProduct?id=${product.id}" class="prod-img">
                        <img src="${product.images[0]}" class="img-fluid" alt="Product Image">
                    </a>
                    <div class="desc">
                        <h2><a href="#">${product.productName}</a></h2>
                        <span class="price">₹${product.price}</span>
                        <div class="icons mt-2">
                            <!-- Cart Icon -->
                            ${product.stock > 0 ? `
                                <a href="javascript:void(0);" class="icon-button" onclick="addToCartFromShop(event, '${product.id}')">
                                    <i class="fas fa-shopping-cart"></i> <!-- Cart Icon -->
                                </a>
                            ` : `
                                <a href="javascript:void(0);" class="icon-button" onclick="handleOutOfStock(event)">
                                    <i class="fas fa-cart-arrow-down"></i> <!-- Out of Stock Icon -->
                                </a>
                                <span id="out-of-stock-message" style="display: none; color: red;">Out of Stock</span>
                            `}
                            <!-- Wishlist Icon -->
                            <a href="/addToWishlist?id=${product.id}" class="icon-button ml-2">
                                <i class="icon-heart"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        `;
			});
		}

	</script>


