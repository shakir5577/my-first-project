	<script>
		function addAddress(event) {
			event.preventDefault()
			const userName = document.getElementById('name').value
			const userNumber = document.getElementById('number').value
			const userStreet = document.getElementById('street').value
			const userCity = document.getElementById('city').value
			const userState = document.getElementById('state').value
			const userPin = document.getElementById('pin').value
			const userCountry = document.getElementById('country').value

			// console.log(userName,userNumber,userStreet,userCity,userState,userPin,userCountry)

			const addressData = {

				userName: userName,
				userNumber: userNumber,
				userStreet: userStreet,
				userCity: userCity,
				userState: userState,
				userPin: userPin,
				userCountry: userCountry

			}

			fetch('/addAddress', {
				method: "post",
				headers: {
					'Content-Type': 'application/json'
				},
				body: JSON.stringify(addressData)
			})
				.then(response => response.json())
				.then(data => {
					if (data.success) {

						Swal.fire({
							title: "<span style='color: #3BB77E;'>Success!</span>",
							html: "<span style='color: black;'>new address added.</span>",
							icon: "success",
							confirmButtonColor: "#3BB77E",
							confirmButtonText: "OK"
						}).then((result) => {
							if (result.isConfirmed) {
								window.location.reload()
							}
						})
					}
				})
		}
	</script>

	<!-- remove address -->

	<script>
        function removeAddress(id) {

            const addressId = { id: id }
            
            Swal.fire({
                title: "<span style='color: #3d5280;'>Are you sure?</span>",
                // html: "<span style='color: black;'>address edited.</span>",
                showCancelButton: true,
                icon: "question",
                confirmButtonColor: "#3d5280",
                confirmButtonText: "Yes"
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/deleteAddress', {
                method: "post",
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(addressId)
            })
                .then(response => response.json())
                .then(data => {
                    if(data.success){
                        Swal.fire({
                            title: "<span style='color: #3BB77E;'>Success!</span>",
                            html: "<span style='color: black;'>address removed.</span>",
                            icon: "success",
                            confirmButtonColor: "#3BB77E",
                            confirmButtonText: "OK"
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.reload()
                            }
                        })
                    }
                })
                }
            })
        }
    </script>

	<!-- place order -->

	<script>
		function placeOrder(event) {
			event.preventDefault();  // Prevent the default action of the link
	
			// Get the selected address
			const selectedAddress = document.querySelector('input[name="address"]:checked');
	
			if (!selectedAddress) {
				// Show a SweetAlert error if no address is selected
				Swal.fire({
					icon: 'error',
					title: 'No address selected',
					text: 'Please select an address before placing the order.'
				});
				return;
			}
	
			const addressId = selectedAddress.value;  // Get the value (address ID) of the selected address

			console.log(addressId)

			// Confirm order placement using SweetAlert
			Swal.fire({
				title: 'Are you sure?',
				text: "Do you want to place the order?",
				icon: 'warning',
				showCancelButton: true,
				confirmButtonColor: '#3085d6',
				cancelButtonColor: '#d33',
				confirmButtonText: 'Yes, place it!'
			}).then((result) => {
				if (result.isConfirmed) {
					// If user confirms, proceed with order placement
					fetch('/placeOrder', {
						method: 'POST',
						headers: {
							'Content-Type': 'application/json'
						},
						body: JSON.stringify({ addressId: addressId })
					})
					.then(response => response.json())
					.then(data => {
						if (data.success) {
							// Show SweetAlert success message
							Swal.fire({
								icon: 'success',
								title: 'Order Placed',
								text: 'Your order has been placed successfully!',
								timer: 3000,
								timerProgressBar: true,
								willClose: () => {
									// Redirect to order confirmation page
									window.location.href = '/orderComplete';
								}
							});
						} else {
							// Show SweetAlert error if there's an issue
							Swal.fire({
								icon: 'error',
								title: 'Order Failed',
								text: data.message || 'There was an error placing the order.'
							});
						}
					})
					.catch(error => {
						console.error('Error:', error);
						// Show SweetAlert error if the fetch request fails
						Swal.fire({
							icon: 'error',
							title: 'Error',
							text: 'An error occurred while placing the order. Please try again later.'
						});
					});
				}
			});
		}
	</script>
	

