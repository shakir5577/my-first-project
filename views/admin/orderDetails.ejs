    <!-- bulk order change status -->
    <script>
        function changeStatus(event, orderId) {

            event.preventDefault();
            // const status = document.getElementById('status').value

            Swal.fire({
                icon: "question",
                title: "<span style='color: black;'>Do you want to save changes?</span>",
                // text: "Verification email sent! Kindly check your inbox.",
                // showDenyButton: true,
                showCancelButton: true,
                confirmButtonColor: '#3BB77E',
                confirmButtonText: 'Yes',
                // denyButtonText: `Don't save`
            }).then((res) => {
                if (res.isConfirmed) {
                    window.location.reload()
                }
            })





        }
    </script>

    <!--show single product status -->
    <script>
            document.addEventListener('DOMContentLoaded', (event) => {
                const productElements = document.querySelectorAll('[id^="productStatusOption"]');

                productElements.forEach(element => {
                    const productId = element.id.replace('productStatusOption', '');
                    const productStatus = document.getElementById(`productStatus${productId}`).value;

                    for (let i = 0; i < element.options.length; i++) {
                        if (element.options[i].value === productStatus) {
                            element.selectedIndex = i;
                            break;
                        }
                    }
                });
            });
        </script>

    <!-- change status of single product -->
    <script>
        function changeProductStatus(productId, orderId) {
            const newStatus = document.getElementById(`productStatusOption${productId}`).value

            console.log(newStatus, productId, orderId)

            const data = {
                newStatus: newStatus,
                productId: productId,
                orderId: orderId
            }

            fetch('/admin/changeProductStatus', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {

                    }
                })
                .catch(error => console.error('Error:', error));
        }
    </script>
