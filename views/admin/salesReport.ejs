            </div>
            <div class="card mb-4">
                <header class="card-header" id="dateHeader">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <!-- <input type="text" placeholder="Search..." class="form-control" /> -->
                            <!-- <input type="date" placeholder="Type here" class="form-control" id="endDate"
                            value="2024-07-10" /> -->
                        </div>
                        <div class="col-lg-2 col-6 col-md-3" style="display: none;" id="startDate">

                            <input type="date" placeholder="Type here" class="form-control" id="startDateInput"
                                />

                        </div>

                        <div class="col-lg-2 col-6 col-md-3" style="display: none;" id="endDate">

                            <input type="date" placeholder="Type here" class="form-control" id="endDateInput"
                                 onchange="customDate(event)" />

                        </div>
                        <div class="card mb-4">
                            <header class="card-header">
                                <div class="row gx-3">
                                    <div class="col-lg-2 col-6 col-md-3">
                                        <select class="form-select" onchange="triggerDateInputs(event)" id="dateInput">
                                            <option>Select Date</option>
                                            <option>Daily</option>
                                            <option>Weekly</option>
                                            <option>Yearly</option>
                                            <option>Custom</option>
                                        </select>
                                    </div>
                                </div>
                            </header>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>No:</th>
                                                <th scope="col">Name</th>
                                                <th scope="col">Email</th>
                                                <th scope="col">Total</th>
                                                <th scope="col">Discount</th>
                                                <th scope="col">Status</th>
                                                <th scope="col">Date</th>
                                                <th scope="col">Payment</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% fetchAllOrders.forEach((val, ind) => { %>
                                                <tr>
                                                    <td><%= ind + 1 %></td>
                                                    <td><b><%= val.shippingAddress.name %></b></td>
                                                    <td><%= val.shippingAddress.email %></td>
                                            
                                                    <!-- Fix: Only Sum Delivered Products -->
                                                    <td>
                                                        <%= val.products.reduce((sum, product) => sum + (product.price || 0) * (product.quantity || 0), 0) %> 
                                                    </td>
                                            
                                                    <td>
                                                        <%= val.orginalAmount - val.totalAmount  %>
                                                    </td>
                                                    <td><span class="badge rounded-pill alert-success">Delivered</span></td>
                                                    <td><%= val.date.toLocaleDateString('en-GB') %></td>
                                                    <td><%= val.paymentMethod %></td>
                                                </tr>
                                            <% }) %>
                                                    <!-- Additional static rows here -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="card mt-4">
                            <div class="card-body">
                                <h5 class="card-title">Overall Summary</h5>
                                <p>Total Sales Count: <%= totalOrders %>
                                </p>
                                <p>Total Order Amount: <%= totalPrice %>
                                </p>
                                <div id="buttons">
                                    <button id="download-pdf-btn" class="btn btn-primary">
                                        <i class="icon material-icons md-file_download"></i>
