    <script>
        document.getElementById('download-pdf-btn').addEventListener('click', function () {

            // document.getElementById('dateHeader').style.display = 'none'
            document.getElementById('buttons').style.display = 'none'
            document.getElementById('pagination').style.display = 'none'

            var element = document.querySelector('.content-main');
            html2pdf(element).then(() => {

                // document.getElementById('dateHeader').style.display = 'block'
                document.getElementById('buttons').style.display = 'block'
                document.getElementById('pagination').style.display = 'block'
            })

        })
    </script>

    <!-- exel -->

    <script>
        document.getElementById('download-excel-btn').addEventListener('click', function () {

            // document.getElementById('dateHeader').style.display = 'none'
            document.getElementById('buttons').style.display = 'none'
            document.getElementById('pagination').style.display = 'none'

            exportToExcel()

            // document.getElementById('dateHeader').style.display = 'block'
            document.getElementById('buttons').style.display = 'block'
            document.getElementById('pagination').style.display = 'block'

        })

        function exportToExcel() {
    // Get the table element
    var table = document.querySelector('.table');

    // Convert the table rows to an Array of Arrays representing rows and cells
    var rows = Array.from(table.querySelectorAll('tr')).map(row =>
        Array.from(row.querySelectorAll('td, th')).map(cell => cell.innerText)
    );

    // Create a new workbook
    var wb = XLSX.utils.book_new();

    // Add worksheet with table data
    var ws = XLSX.utils.aoa_to_sheet(rows);
    XLSX.utils.book_append_sheet(wb, ws, 'Sheet1');

    // Add the overall summary after the table
    var summaryRows = [
        [], // Blank row
        ['Overall Summary'], // Title
        ['Total Sales Count:', '<%= totalOrders %>'], // Total sales count
        ['Total Order Amount:', '₹<%= totalPrice %>'] // Total order amount
    ];

    // Append the summary to the sheet
    XLSX.utils.sheet_add_aoa(ws, summaryRows, { origin: -1 });

    // Write the Excel file
    XLSX.writeFile(wb, 'sales_report.xlsx');
}

    </script>

